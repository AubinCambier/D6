<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="700.0" styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ihm.ControleurListEtudiants">
   <top>
      <VBox>
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="10.0" style="-fx-background-color: #e0e0e0; -fx-padding: 0 10;">
               <children>
                  <Button fx:id="buttonMenu" onAction="#pressedButtonMenu" styleClass="button-icon" />
                  <Button fx:id="buttonRetour" onAction="#pressedButtonRetour" styleClass="button-icon" />
                  <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Liste des Étudiants" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" spacing="10.0" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
               <children>
                  <Button onAction="#pressedListeAppariements" text="Voir les Appariements" />
                  <Button onAction="#pressedCriteres" text="Définir les Critères" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <ListView fx:id="etudiants" prefHeight="353.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </ListView>
   </center>
</BorderPane>
